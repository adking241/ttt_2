<table>
	<tr><!--  #keeps all on same row -->
		<th>Title</th> <!-- #gives bold look as header <th> -->
		<th>ISBN</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<tr>
		<td><%=book['title']%></td> <!-- #td tags create data fields under headers above -->
		<td><%=book['isbn']%></td>
		<td><%=book['quantity']%></td>
		<td><%=price%></td>
	</tr>
</table>
<p>How many would you like to add to your cart?</p>

<form method="post" action="cart">
	<input type="number" name="number_add_to_cart" min='0' max=<%=book['quantity']%>> <!-- #specifies amounts- min 0 max available -->
	<button type='submit'>Submit</button>
</form>